<document xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://maven.apache.org/changes/1.0.0"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
  <body>

    <release version="10" date="not released">
      <action type="update" dev="sseifert">
        Update to global-parent 17.
      </action>
    </release>

    <release version="9" date="2017-01-06">
      <action type="update" dev="sseifert">
        Update global-parent dependency to 13.
      </action>
      <action type="update" dev="sseifert">
        Add full support of OSGi DS and Metatype annotations and remove Maven SCR Plugin.
        Felix SCR annotations are still supported as well, but it is recommended to migrate to OSGi annotations.
        Support for Felix SCR annotations will be removed in the future.
        You should remove all maven-scr-plugin invocations from your POMs with this update!
      </action>
      <action type="update" dev="sseifert">
        org.apache.felix.scr.annotations are no longer included as default provided dependency, but are still supported if included explicitly.
      </action>
    </release>

    <release version="8" date="2016-02-12">
      <action type="update" dev="sseifert">
        Switch to Java 8, remove retrolambda and animal sniffing.
      </action>
    </release>

    <release version="5" date="2015-11-12">
      <action type="update" dev="sseifert">
        Update global-parent dependency to 10.
      </action>
      <action type="update" dev="sseifert">
        Update build plugins to latest versions.
      </action>
    </release>

    <release version="4" date="2015-07-16">
      <action type="update" dev="sseifert">
        Update global-parent dependency.
      </action>
    </release>

    <release version="3" date="2015-07-13">
      <action type="update" dev="sseifert">
        Update global-parent dependency.
      </action>
      <action type="update" dev="sseifert">
        Update to retrolambda-maven-plugin 2.0.4.
      </action>
    </release>

    <release version="2" date="2015-05-29">
      <action type="update" dev="sseifert">
        Update dependencies and plugins.
      </action>
    </release>

    <release version="1" date="2015-01-30">
      <action type="update" dev="sseifert">
        Initial release.
      </action>
    </release>

  </body>
</document>
